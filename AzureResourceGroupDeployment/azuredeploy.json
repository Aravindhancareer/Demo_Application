{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "myazurewebappName": {
      "type": "string",
      "minLength": 1
    },
    "myazurewebappSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "myazuredatabaseAdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "myazuredatabaseAdminLoginPassword": {
      "type": "securestring"
    },
    "myazuredatabaseName": {
      "type": "string",
      "minLength": 1
    },
    "myazuredatabaseCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "myazuredatabaseEdition": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "myazuredatabaseRequestedServiceObjectiveName": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "Describes the performance level for Edition"
      }
    }},
  "variables": {},
  "resources": [
    {
      "name": "[parameters('myazurewebappName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('myazurewebappSkuName')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "myazurewebapp"
      },
      "properties": {
        "name": "[parameters('myazurewebappName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[parameters('myazurewebappName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('myazurewebappName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('myazurewebappName')))]": "Resource",
        "displayName": "myazurewebapp"
      },
      "properties": {
        "name": "[parameters('myazurewebappName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('myazurewebappName'))]"
      }
    },
    {
      "name": "[parameters('myazuredatabaseName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "myazuredatabase"
      },
      "properties": {
        "administratorLogin": "[parameters('myazuredatabaseAdminLogin')]",
        "administratorLoginPassword": "[parameters('myazuredatabaseAdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('myazuredatabaseName'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "[parameters('myazuredatabaseName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('myazuredatabaseName'))]"
          ],
          "tags": {
            "displayName": "myazuredatabase"
          },
          "properties": {
            "collation": "[parameters('myazuredatabaseCollation')]",
            "edition": "[parameters('myazuredatabaseEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('myazuredatabaseRequestedServiceObjectiveName')]"
          }
        }
      ]
    }],
  "outputs": {}
}
